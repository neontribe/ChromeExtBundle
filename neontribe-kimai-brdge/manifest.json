{
  "manifest_version": 2,
  "name": "Kimai Timesheet Bridge",
  "description": "Allow access to a Kimai timesheet server",
  "homepage_url": "https://www.neontribe.co.uk",
  "version": "0.0.1",
  "background": {
    "scripts": ["event.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs", 
    "storage",
    "http://*/*", 
    "https://*/*"
    ]
}
